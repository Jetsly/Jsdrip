{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": false,
    "sourceMap": true
  },
  "files": [
    "src/main.ts",
    "src/vendor.ts"
  ],
  "filesGlob": [
    "./src/**/*.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}